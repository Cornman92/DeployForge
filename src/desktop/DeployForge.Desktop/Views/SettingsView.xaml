<UserControl x:Class="DeployForge.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Settings" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                <TextBlock Text="Configure application and feature preferences"
                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                          Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                       Command="{Binding ResetSettingsCommand}"
                       Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Restore" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Reset to Defaults"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding SaveSettingsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Save Settings"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Settings Tabs -->
        <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignNavigationRailTabControl}">

            <!-- General Tab -->
            <TabItem Header="General">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="General" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- API Connection Settings -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Api" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="API Connection" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <TextBox Text="{Binding ApiBaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="API Base URL"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                            Text="{Binding ApiTimeout, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Timeout (seconds)"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Margin="0,0,10,0"/>

                                    <CheckBox Grid.Column="1"
                                             IsChecked="{Binding UseHttps}"
                                             Content="Use HTTPS"
                                             VerticalAlignment="Center"/>
                                </Grid>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding TestConnectionCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Connection" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Test Connection"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Application Settings -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Application" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Application" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox Grid.Row="0" Grid.Column="0"
                                             ItemsSource="{Binding Themes}"
                                             SelectedItem="{Binding Theme}"
                                             materialDesign:HintAssist.Hint="Theme"
                                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                             Margin="0,0,10,10"/>

                                    <ComboBox Grid.Row="0" Grid.Column="1"
                                             ItemsSource="{Binding Languages}"
                                             SelectedItem="{Binding Language}"
                                             materialDesign:HintAssist.Hint="Language"
                                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                             Margin="0,0,0,10"/>

                                    <CheckBox Grid.Row="1" Grid.Column="0"
                                             IsChecked="{Binding CheckForUpdates}"
                                             Content="Check for updates automatically"
                                             Margin="0,0,10,5"/>

                                    <CheckBox Grid.Row="1" Grid.Column="1"
                                             IsChecked="{Binding StartWithWindows}"
                                             Content="Start with Windows"
                                             Margin="0,0,0,5"/>
                                </Grid>

                                <CheckBox IsChecked="{Binding MinimizeToTray}"
                                         Content="Minimize to system tray"
                                         Margin="0,5,0,10"/>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding CheckForUpdatesCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Update" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Check for Updates Now"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Performance Settings -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Speedometer" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Performance" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Maximum Concurrent Operations" Margin="0,0,0,5"/>
                                        <Slider Value="{Binding MaxConcurrentOperations}"
                                               Minimum="1"
                                               Maximum="8"
                                               TickFrequency="1"
                                               IsSnapToTickEnabled="True"
                                               Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding MaxConcurrentOperations, StringFormat='{}{0} operations'}"
                                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Cache Size (MB)" Margin="0,0,0,5"/>
                                        <Slider Value="{Binding CacheSize}"
                                               Minimum="100"
                                               Maximum="2000"
                                               TickFrequency="100"
                                               IsSnapToTickEnabled="True"
                                               Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CacheSize, StringFormat='{}{0} MB'}"
                                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                    </StackPanel>
                                </Grid>

                                <CheckBox IsChecked="{Binding EnableHardwareAcceleration}"
                                         Content="Enable hardware acceleration"
                                         Margin="0,10,0,10"/>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding ClearCacheCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Broom" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Clear Cache"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Logging Settings -->
                        <materialDesign:Card Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="FileDocument" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Logging" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <ComboBox ItemsSource="{Binding LogLevels}"
                                         SelectedItem="{Binding LogLevel}"
                                         materialDesign:HintAssist.Hint="Log Level"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Text="{Binding LogDirectory, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Log Directory"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <Button Grid.Column="1"
                                           Style="{StaticResource MaterialDesignIconButton}"
                                           Command="{Binding BrowseLogDirectoryCommand}"
                                           Margin="5,0,0,0">
                                        <materialDesign:PackIcon Kind="FolderOpen"/>
                                    </Button>
                                </Grid>

                                <CheckBox IsChecked="{Binding EnableFileLogging}"
                                         Content="Enable file logging"
                                         Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding EnableDebugLogging}"
                                         Content="Enable debug logging (verbose)"
                                         Margin="0,0,0,10"/>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding OpenLogDirectoryCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Open Log Directory"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Monitoring & Alerts Tab -->
            <TabItem Header="Monitoring">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="MonitorDashboard" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Monitoring" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Alert Thresholds -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="AlertCircle" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Alert Thresholds" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <CheckBox IsChecked="{Binding EnableAlertsMonitoring}"
                                         Content="Enable Alert Monitoring"
                                         Margin="0,0,0,15"/>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="CPU Usage Threshold (%)" Margin="0,0,0,5"/>
                                    <Slider Value="{Binding CpuThreshold}"
                                           Minimum="50"
                                           Maximum="100"
                                           TickFrequency="5"
                                           IsSnapToTickEnabled="True"
                                           Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding CpuThreshold, StringFormat='{}{0:F0}%'}"
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="Memory Usage Threshold (%)" Margin="0,0,0,5"/>
                                    <Slider Value="{Binding MemoryThreshold}"
                                           Minimum="50"
                                           Maximum="100"
                                           TickFrequency="5"
                                           IsSnapToTickEnabled="True"
                                           Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding MemoryThreshold, StringFormat='{}{0:F0}%'}"
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="Disk Usage Threshold (%)" Margin="0,0,0,5"/>
                                    <Slider Value="{Binding DiskThreshold}"
                                           Minimum="50"
                                           Maximum="100"
                                           TickFrequency="5"
                                           IsSnapToTickEnabled="True"
                                           Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding DiskThreshold, StringFormat='{}{0:F0}%'}"
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                </StackPanel>

                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                       Command="{Binding ConfigureAlertThresholdsCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Apply Alert Thresholds"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Data Retention -->
                        <materialDesign:Card Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="DatabaseClock" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Data Retention" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBox Text="{Binding MetricsRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                                materialDesign:HintAssist.Hint="Metrics Retention (days)"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                Margin="0,0,0,10"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBox Text="{Binding AlertRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                                materialDesign:HintAssist.Hint="Alert Retention (days)"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                Margin="0,0,0,10"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Notifications Tab -->
            <TabItem Header="Notifications">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="Bell" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Notifications" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Basic Notifications -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="BellRing" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Basic Notifications" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <CheckBox IsChecked="{Binding ShowNotifications}"
                                         Content="Enable notifications"
                                         Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding PlaySound}"
                                         Content="Play notification sound"
                                         Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding ShowDesktopNotifications}"
                                         Content="Show desktop notifications"
                                         Margin="0,0,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Email Notifications -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Email" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Email Notifications" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <CheckBox IsChecked="{Binding EnableEmailNotifications}"
                                         Content="Enable email notifications"
                                         Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                            Text="{Binding SmtpServer, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="SMTP Server"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Margin="0,0,10,0"/>

                                    <TextBox Grid.Column="1"
                                            Text="{Binding SmtpPort, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Port"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                            Text="{Binding SmtpUsername, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Username"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Margin="0,0,10,0"/>

                                    <PasswordBox Grid.Column="1"
                                                materialDesign:HintAssist.Hint="Password"
                                                Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                            Text="{Binding EmailFrom, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="From Email"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Margin="0,0,10,0"/>

                                    <TextBox Grid.Column="1"
                                            Text="{Binding EmailTo, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="To Email(s)"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                </Grid>

                                <CheckBox IsChecked="{Binding SmtpUseSsl}"
                                         Content="Use SSL/TLS"
                                         Margin="0,0,0,10"/>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding TestEmailNotificationCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="EmailSend" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Send Test Email"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Slack Notifications -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Slack" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Slack Notifications" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <CheckBox IsChecked="{Binding EnableSlackNotifications}"
                                         Content="Enable Slack notifications"
                                         Margin="0,0,0,10"/>

                                <TextBox Text="{Binding SlackWebhookUrl, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Webhook URL"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                            Text="{Binding SlackChannel, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Channel"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            Margin="0,0,10,0"/>

                                    <TextBox Grid.Column="1"
                                            Text="{Binding SlackUsername, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Username"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                </Grid>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding TestSlackNotificationCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Send" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Send Test Message"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Teams Notifications -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="MicrosoftTeams" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Microsoft Teams Notifications" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <CheckBox IsChecked="{Binding EnableTeamsNotifications}"
                                         Content="Enable Teams notifications"
                                         Margin="0,0,0,10"/>

                                <TextBox Text="{Binding TeamsWebhookUrl, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Webhook URL"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,10"/>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding TestTeamsNotificationCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Send" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Send Test Message"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Webhook Notifications -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Webhook" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Custom Webhook" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <CheckBox IsChecked="{Binding EnableWebhookNotifications}"
                                         Content="Enable webhook notifications"
                                         Margin="0,0,0,10"/>

                                <TextBox Text="{Binding WebhookUrl, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Webhook URL"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox Grid.Column="0"
                                             ItemsSource="{Binding WebhookMethods}"
                                             SelectedItem="{Binding WebhookMethod}"
                                             materialDesign:HintAssist.Hint="Method"
                                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                             Margin="0,0,10,0"/>

                                    <TextBox Grid.Column="1"
                                            Text="{Binding WebhookAuthHeader, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Authorization Header (optional)"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                </Grid>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding TestWebhookNotificationCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Send" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Send Test Webhook"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Save All Notifications -->
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                               Command="{Binding SaveNotificationSettingsCommand}"
                               HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Save All Notification Settings"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Reports Tab -->
            <TabItem Header="Reports">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FileChart" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Reports" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Report Generation -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="FilePdfBox" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Report Generation" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Text="{Binding ReportOutputDirectory, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Report Output Directory"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                    <Button Grid.Column="1"
                                           Style="{StaticResource MaterialDesignIconButton}"
                                           Command="{Binding BrowseReportDirectoryCommand}"
                                           Margin="5,0,0,0">
                                        <materialDesign:PackIcon Kind="FolderOpen"/>
                                    </Button>
                                </Grid>

                                <ComboBox ItemsSource="{Binding ReportFormats}"
                                         SelectedItem="{Binding DefaultReportFormat}"
                                         materialDesign:HintAssist.Hint="Default Report Format"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding IncludeChartsInReports}"
                                         Content="Include charts in reports"
                                         Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding IncludeSummarySection}"
                                         Content="Include summary section"
                                         Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding IncludeDetailedLogs}"
                                         Content="Include detailed logs"
                                         Margin="0,0,0,10"/>

                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                       Command="{Binding OpenReportDirectoryCommand}"
                                       HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Open Report Directory"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Automated Reports -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="CalendarClock" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Automated Reports" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <CheckBox IsChecked="{Binding AutoGenerateDailyReport}"
                                         Content="Auto-generate daily report"
                                         Margin="0,0,0,10"/>

                                <TextBox Text="{Binding DailyReportTime, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Daily Report Time (HH:mm)"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,10"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Report Retention -->
                        <materialDesign:Card Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="DatabaseRemove" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Report Retention" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <TextBox Text="{Binding ReportRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Report Retention (days)"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,10"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Schedules Tab -->
            <TabItem Header="Schedules">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="CalendarCheck" Width="24" Height="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Schedules" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Schedule Configuration -->
                        <materialDesign:Card Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Schedule Configuration" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <CheckBox IsChecked="{Binding EnableScheduledJobs}"
                                         Content="Enable scheduled jobs"
                                         Margin="0,0,0,15"/>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="Maximum Concurrent Scheduled Jobs" Margin="0,0,0,5"/>
                                    <Slider Value="{Binding MaxConcurrentScheduledJobs}"
                                           Minimum="1"
                                           Maximum="10"
                                           TickFrequency="1"
                                           IsSnapToTickEnabled="True"
                                           Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding MaxConcurrentScheduledJobs, StringFormat='{}{0} jobs'}"
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                </StackPanel>

                                <ComboBox ItemsSource="{Binding TimeZones}"
                                         SelectedItem="{Binding DefaultTimeZone}"
                                         materialDesign:HintAssist.Hint="Default Time Zone"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding SendScheduleNotifications}"
                                         Content="Send notifications for scheduled job completion"
                                         Margin="0,0,0,10"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Schedule Retention -->
                        <materialDesign:Card Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <materialDesign:PackIcon Kind="DatabaseClock" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Schedule Retention" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                </StackPanel>

                                <TextBox Text="{Binding ScheduleRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Schedule History Retention (days)"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,10"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <materialDesign:Card Grid.Row="2" Padding="10" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                      HorizontalAlignment="Center"/>
        </materialDesign:Card>
    </Grid>
</UserControl>
