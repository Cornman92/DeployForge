<UserControl x:Class="DeployForge.Desktop.Views.SchedulesManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Schedules List -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Schedules" Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                           Command="{Binding NewScheduleCommand}"
                           ToolTip="New Schedule">
                        <materialDesign:PackIcon Kind="Plus"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                           Command="{Binding RefreshCommand}"
                           ToolTip="Refresh">
                        <materialDesign:PackIcon Kind="Refresh"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Filter -->
            <CheckBox Grid.Row="1"
                     IsChecked="{Binding ShowEnabledOnly}"
                     Content="Show enabled only"
                     Margin="0,0,0,15"/>

            <!-- Schedules List -->
            <materialDesign:Card Grid.Row="2">
                <DataGrid ItemsSource="{Binding Schedules}"
                         SelectedItem="{Binding SelectedSchedule}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         materialDesign:DataGridAssist.CellPadding="8"
                         materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding StatusDisplay}" Width="Auto"/>
                        <DataGridTextColumn Header="Next Run" Binding="{Binding NextRunDisplay}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0">
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding EditScheduleCommand}"
                       IsEnabled="{Binding SelectedSchedule, Converter={StaticResource NullToVisibility}}"
                       Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Edit"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding ExecuteScheduleCommand}"
                       IsEnabled="{Binding SelectedSchedule, Converter={StaticResource NullToVisibility}}"
                       Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Play" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Execute"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding DeleteScheduleCommand}"
                       IsEnabled="{Binding SelectedSchedule, Converter={StaticResource NullToVisibility}}"
                       Background="{DynamicResource MaterialDesignValidationErrorBrush}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Delete"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Right Panel: Schedule Details/Editor and Execution History -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Schedule Editor -->
            <materialDesign:Card Grid.Row="0" Padding="20" Margin="0,0,0,20">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding IsEditing, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Edit Schedule|Schedule Details'}"
                                      Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}}">
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                       Command="{Binding SaveScheduleCommand}"
                                       Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Save"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                       Command="{Binding CancelEditCommand}">
                                    <TextBlock Text="Cancel"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,15"/>

                        <!-- Schedule Form -->
                        <StackPanel IsEnabled="{Binding IsEditing}" Margin="0,15,0,0">
                            <TextBox Text="{Binding ScheduleName, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Schedule Name"
                                    Margin="0,0,0,15"/>

                            <TextBox Text="{Binding CronExpression, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Cron Expression (e.g., 0 0 2 * * ?)"
                                    Margin="0,0,0,5"/>

                            <ComboBox ItemsSource="{Binding CronPresets}"
                                     materialDesign:HintAssist.Hint="Cron Presets"
                                     Margin="0,0,0,15"/>

                            <TextBox Text="{Binding BatchOperationId, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Batch Operation ID"
                                    Margin="0,0,0,15"/>

                            <CheckBox IsChecked="{Binding IsEnabled}"
                                     Content="Enabled"
                                     Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBox Text="{Binding MaxRetries, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Max Retries"
                                            Margin="0,0,0,15"/>

                                    <CheckBox IsChecked="{Binding SkipOnFailure}"
                                             Content="Skip on Failure"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBox Text="{Binding MaxConcurrentExecutions, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Max Concurrent Executions"
                                            Margin="0,0,0,15"/>

                                    <CheckBox IsChecked="{Binding SendNotifications}"
                                             Content="Send Notifications"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Read-only view when not editing -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverted}"
                                   Margin="0,15,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedSchedule.Name}" Margin="0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Cron:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedSchedule.CronExpression}" Margin="0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Next Run:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedSchedule.NextRunDisplay}" Margin="0,5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Run:" FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedSchedule.LastRunDisplay}" Margin="0,5"/>
                            </Grid>

                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   Command="{Binding ViewExecutionHistoryCommand}"
                                   HorizontalAlignment="Left"
                                   Margin="0,15,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="History" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="View Execution History"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>

            <!-- Execution History -->
            <materialDesign:Card Grid.Row="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Execution History" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding Executions}"
                             SelectedItem="{Binding SelectedExecution}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             materialDesign:DataGridAssist.CellPadding="8"
                             materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Started" Binding="{Binding StartedAt, StringFormat='g'}" Width="Auto"/>
                            <DataGridTextColumn Header="Completed" Binding="{Binding CompletedAt, StringFormat='g'}" Width="Auto"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding DurationDisplay}" Width="Auto"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                            <DataGridTextColumn Header="Error" Binding="{Binding ErrorMessage}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="1"
                              Text="No execution history available. Select a schedule to view its execution history."
                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              Visibility="{Binding Executions.Count, Converter={StaticResource CountToVisibility}, ConverterParameter=Inverted}"/>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
