<UserControl x:Class="DeployForge.Desktop.Views.NotificationsCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Notifications Center" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding SaveSettingsCommand}"
                       Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Save Settings"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding SendTestNotificationCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Send" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Send Test"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Configuration Tabs -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,20">
            <TabControl>
                <!-- Email Tab -->
                <TabItem Header="Email">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <CheckBox IsChecked="{Binding EmailEnabled}"
                                     Content="Enable Email Notifications"
                                     Margin="0,0,0,20"/>

                            <Grid IsEnabled="{Binding EmailEnabled}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBox Text="{Binding SmtpServer, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="SMTP Server"
                                            Margin="0,0,0,15"/>

                                    <TextBox Text="{Binding SmtpPort, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="SMTP Port"
                                            Margin="0,0,0,15"/>

                                    <TextBox Text="{Binding SmtpUsername, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Username"
                                            Margin="0,0,0,15"/>

                                    <PasswordBox materialDesign:HintAssist.Hint="Password"
                                                Margin="0,0,0,15"/>

                                    <CheckBox IsChecked="{Binding SmtpUseSsl}"
                                             Content="Use SSL/TLS"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBox Text="{Binding EmailFrom, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="From Address"
                                            Margin="0,0,0,15"/>

                                    <TextBox Text="{Binding EmailTo, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:HintAssist.Hint="Default Recipients (semicolon-separated)"
                                            AcceptsReturn="True"
                                            Height="100"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Slack Tab -->
                <TabItem Header="Slack">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <CheckBox IsChecked="{Binding SlackEnabled}"
                                     Content="Enable Slack Notifications"
                                     Margin="0,0,0,20"/>

                            <StackPanel IsEnabled="{Binding SlackEnabled}">
                                <TextBox Text="{Binding SlackWebhookUrl, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Webhook URL"
                                        Margin="0,0,0,15"/>

                                <TextBox Text="{Binding SlackChannel, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Default Channel (e.g., #general)"
                                        Margin="0,0,0,15"/>

                                <TextBox Text="{Binding SlackUsername, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Bot Username"
                                        Margin="0,0,0,15"/>

                                <TextBlock TextWrapping="Wrap"
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          Foreground="{DynamicResource MaterialDesignBodyLight}">
                                    To get a webhook URL, go to your Slack workspace settings and create an incoming webhook.
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Teams Tab -->
                <TabItem Header="Microsoft Teams">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <CheckBox IsChecked="{Binding TeamsEnabled}"
                                     Content="Enable Teams Notifications"
                                     Margin="0,0,0,20"/>

                            <StackPanel IsEnabled="{Binding TeamsEnabled}">
                                <TextBox Text="{Binding TeamsWebhookUrl, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Webhook URL"
                                        Margin="0,0,0,15"/>

                                <TextBlock TextWrapping="Wrap"
                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                          Foreground="{DynamicResource MaterialDesignBodyLight}">
                                    To get a webhook URL, add an Incoming Webhook connector to your Teams channel.
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Test Tab -->
                <TabItem Header="Test">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Send Test Notification" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                            <ComboBox ItemsSource="{Binding NotificationChannels}"
                                     SelectedItem="{Binding SelectedChannel}"
                                     materialDesign:HintAssist.Hint="Select Channel"
                                     Margin="0,0,0,15"/>

                            <TextBox Text="{Binding TestSubject, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Subject"
                                    Margin="0,0,0,15"/>

                            <TextBox Text="{Binding TestMessage, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:HintAssist.Hint="Message"
                                    AcceptsReturn="True"
                                    Height="100"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto"
                                    Margin="0,0,0,15"/>

                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   Command="{Binding SendTestNotificationCommand}"
                                   HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Send" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Send Test Notification"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </materialDesign:Card>

        <!-- Notification History -->
        <materialDesign:Card Grid.Row="2" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Notification History" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>

                    <Button Grid.Column="1"
                           Style="{StaticResource MaterialDesignIconButton}"
                           Command="{Binding RefreshHistoryCommand}"
                           ToolTip="Refresh">
                        <materialDesign:PackIcon Kind="Refresh"/>
                    </Button>
                </Grid>

                <!-- History DataGrid -->
                <DataGrid Grid.Row="1"
                         ItemsSource="{Binding History}"
                         SelectedItem="{Binding SelectedHistory}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         materialDesign:DataGridAssist.CellPadding="8"
                         materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding SentAt, StringFormat='g'}" Width="Auto"/>
                        <DataGridTextColumn Header="Channel" Binding="{Binding Channel}" Width="Auto"/>
                        <DataGridTextColumn Header="Event Type" Binding="{Binding EventType}" Width="Auto"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Recipient" Binding="{Binding Recipient}" Width="Auto"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
