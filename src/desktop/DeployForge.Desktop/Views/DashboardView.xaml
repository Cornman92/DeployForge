<UserControl x:Class="DeployForge.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Dashboard" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                    <TextBlock Text="{Binding LastRefreshTime, StringFormat='Last updated: {0:g}'}"
                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                           Command="{Binding RunPreFlightChecksCommand}"
                           Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PlaylistCheck" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Pre-Flight Checks"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                           Command="{Binding RefreshCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Mounted Images Card -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ImageAlbum" Width="32" Height="32"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="{Binding MountedImagesCount}"
                                  Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="Mounted Images" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Active Batch Operations Card -->
                <materialDesign:Card Grid.Column="1" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ViewList" Width="32" Height="32"
                                               Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                        <TextBlock Text="{Binding ActiveBatchOperationsCount}"
                                  Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="Batch Operations" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Templates Card -->
                <materialDesign:Card Grid.Column="2" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="FileDocument" Width="32" Height="32"
                                               Foreground="#FF9800"/>
                        <TextBlock Text="{Binding TotalTemplatesCount}"
                                  Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="Templates" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Success Rate Card -->
                <materialDesign:Card Grid.Column="3" Padding="15">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ChartLine" Width="32" Height="32"
                                               Foreground="#4CAF50"/>
                        <TextBlock Text="{Binding SuccessRateToday, StringFormat='{}{0:F1}%'}"
                                  Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="Success Rate Today" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- System Health and Quick Actions -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- System Health Card -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="System Health" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- API Version -->
                            <materialDesign:PackIcon Grid.Row="0" Grid.Column="0" Kind="Api" Margin="0,0,10,10"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                <TextBlock Text="API Version" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                <TextBlock Text="{Binding ApiVersion}" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            </StackPanel>

                            <!-- System Info -->
                            <materialDesign:PackIcon Grid.Row="1" Grid.Column="0" Kind="MonitorDashboard" Margin="0,0,10,10"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                                <TextBlock Text="System" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                <TextBlock Text="{Binding SystemInfo}" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            </StackPanel>

                            <!-- CPU Usage -->
                            <materialDesign:PackIcon Grid.Row="2" Grid.Column="0" Kind="Cpu64Bit" Margin="0,0,10,10"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                                <TextBlock Text="CPU Usage" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                <ProgressBar Value="{Binding SystemCpuUsage}" Maximum="100" Height="4" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding SystemCpuUsage, StringFormat='{}{0:F1}%'}"
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            </StackPanel>

                            <!-- Memory Usage -->
                            <materialDesign:PackIcon Grid.Row="3" Grid.Column="0" Kind="Memory" Margin="0,0,10,10"/>
                            <StackPanel Grid.Row="3" Grid.Column="1">
                                <TextBlock Text="Memory Usage" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                <ProgressBar Value="{Binding SystemMemoryUsage}" Maximum="100" Height="4" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding SystemMemoryUsage, StringFormat='{}{0:F1}%'}"
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Quick Actions Card -->
                <materialDesign:Card Grid.Column="1" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                        <ItemsControl ItemsSource="{Binding QuickActions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                                           HorizontalAlignment="Stretch"
                                           HorizontalContentAlignment="Left"
                                           Margin="0,0,0,5">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="{Binding Icon}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}"
                                                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                          Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Recent Operations -->
            <materialDesign:Card Grid.Row="3" Padding="15">
                <StackPanel>
                    <TextBlock Text="Recent Operations" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                    <DataGrid ItemsSource="{Binding RecentOperations}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             materialDesign:DataGridAssist.CellPadding="8"
                             materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Operation" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding Duration, StringFormat='{}{0}ms'}" Width="Auto"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='g'}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Text="No recent operations"
                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0"
                              Visibility="{Binding RecentOperations.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</UserControl>
