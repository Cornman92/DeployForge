<Window x:Class="DeployForge.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:DeployForge.Desktop.ViewModels"
        xmlns:views="clr-namespace:DeployForge.Desktop.Views"
        mc:Ignorable="d"
        Title="DeployForge - Windows Image Configurator"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.Resources>
        <!-- DataTemplates for ViewModel to View mapping -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ImageManagementViewModel}">
            <views:ImageManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ComponentManagerViewModel}">
            <views:ComponentManagerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:WorkflowDesignerViewModel}">
            <views:WorkflowDesignerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DebloatWizardViewModel}">
            <views:DebloatWizardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BackupManagerViewModel}">
            <views:BackupManagerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConfigurationProfilesViewModel}">
            <views:ConfigurationProfilesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AuditLogViewerViewModel}">
            <views:AuditLogViewerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BatchOperationsViewModel}">
            <views:BatchOperationsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TemplateManagerViewModel}">
            <views:TemplateManagerView />
        </DataTemplate>
        <!-- Option B Feature DataTemplates -->
        <DataTemplate DataType="{x:Type vm:MonitoringDashboardViewModel}">
            <views:MonitoringDashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsDashboardViewModel}">
            <views:ReportsDashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:NotificationsCenterViewModel}">
            <views:NotificationsCenterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SchedulesManagerViewModel}">
            <views:SchedulesManagerView />
        </DataTemplate>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding IsMenuOpen}">

            <!-- Left Navigation Drawer -->
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel Width="280">
                    <!-- App Header -->
                    <Border DockPanel.Dock="Top" Background="{DynamicResource PrimaryHueMidBrush}" Padding="20">
                        <StackPanel>
                            <TextBlock Text="DeployForge" Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="Windows Image Configurator" Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <!-- API Status -->
                    <Border DockPanel.Dock="Top" Background="{DynamicResource MaterialDesignDivider}" Padding="15,10">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Circle"
                                                    Foreground="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                                    VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding ApiStatus}" VerticalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Navigation Items -->
                    <ListBox ItemsSource="{Binding NavigationItems}"
                            SelectedItem="{Binding SelectedNavigationItem}"
                            Style="{StaticResource MaterialDesignNavigationListBox}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <materialDesign:PackIcon Kind="{Binding Icon}" Width="24" Height="24" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Title}" Margin="15,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <!-- Main Content -->
            <DockPanel>
                <!-- Top App Bar -->
                <materialDesign:ColorZone DockPanel.Dock="Top" Mode="PrimaryMid" Padding="16" Height="60">
                    <DockPanel>
                        <Button DockPanel.Dock="Left" Style="{StaticResource MaterialDesignIconButton}"
                               Command="{Binding ToggleMenuCommand}">
                            <materialDesign:PackIcon Kind="Menu"/>
                        </Button>

                        <TextBlock DockPanel.Dock="Left" Text="DeployForge"
                                  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                  VerticalAlignment="Center" Margin="15,0,0,0"/>

                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                   Command="{Binding TestConnectionCommand}"
                                   ToolTip="Test API Connection">
                                <materialDesign:PackIcon Kind="Refresh"/>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                   ToolTip="Settings">
                                <materialDesign:PackIcon Kind="Cog"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>

                <!-- Status Bar -->
                <Border DockPanel.Dock="Bottom" Background="{DynamicResource MaterialDesignDivider}" Height="30">
                    <DockPanel Margin="10,0">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding StatusMessage}"
                                  VerticalAlignment="Center" FontSize="11"/>

                        <ProgressBar DockPanel.Dock="Right" Width="100" Height="4"
                                    IsIndeterminate="{Binding IsBusy}"
                                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                    VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>

                <!-- Content Area -->
                <Grid Margin="20">
                    <!-- Default message when no view is selected -->
                    <TextBlock Text="Select a menu item to begin"
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              Opacity="0.5"
                              Visibility="{Binding CurrentViewModel, Converter={StaticResource InvertedNullToVisibility}}"/>

                    <!-- Current view content -->
                    <ContentControl Content="{Binding CurrentViewModel}" />
                </Grid>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>
