<UserControl x:Class="DeployForge.Desktop.Views.ConfigurationProfilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Configuration Profiles" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                <TextBlock Text="Manage application configuration profiles"
                          Style="{StaticResource MaterialDesignCaptionTextBlock}"
                          Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding CreateProfileCommand}"
                       Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Create"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding ImportProfileCommand}"
                       Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Import" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Import"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding RefreshCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Profile List -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Box -->
                    <TextBox Grid.Row="0"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Search profiles"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,0,10"/>

                    <!-- Profile Count -->
                    <TextBlock Grid.Row="1"
                              Text="{Binding FilteredProfiles.Count, StringFormat='{}{0} profiles'}"
                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                              Margin="0,0,0,10"/>

                    <!-- Profile List -->
                    <ListBox Grid.Row="2"
                            ItemsSource="{Binding FilteredProfiles}"
                            SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Name with Default Badge -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>

                                        <Border Grid.Column="1"
                                               Background="{DynamicResource PrimaryHueMidBrush}"
                                               CornerRadius="3"
                                               Padding="6,2"
                                               Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="DEFAULT" Foreground="White" FontSize="9"/>
                                        </Border>
                                    </Grid>

                                    <TextBlock Grid.Row="1" Text="{Binding Description}"
                                              Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                              TextWrapping="Wrap"
                                              Margin="0,2,0,0"/>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Owner, StringFormat='by {0}'}"
                                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        <materialDesign:PackIcon Kind="Share"
                                                               Width="12"
                                                               Height="12"
                                                               Margin="10,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                               Visibility="{Binding IsShared, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>

            <!-- Right Panel - Profile Details -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Profile Info Card -->
                    <materialDesign:Card Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Profile Details" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                           Command="{Binding SetDefaultCommand}"
                                           ToolTip="Set as Default"
                                           Margin="0,0,5,0">
                                        <materialDesign:PackIcon Kind="Star"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                           Command="{Binding DuplicateProfileCommand}"
                                           ToolTip="Duplicate"
                                           Margin="0,0,5,0">
                                        <materialDesign:PackIcon Kind="ContentCopy"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                           Command="{Binding EditProfileCommand}"
                                           ToolTip="Edit"
                                           Margin="0,0,5,0">
                                        <materialDesign:PackIcon Kind="Pencil"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                           Command="{Binding ExportProfileCommand}"
                                           ToolTip="Export"
                                           Margin="0,0,5,0">
                                        <materialDesign:PackIcon Kind="Export"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                           Command="{Binding DeleteProfileCommand}"
                                           ToolTip="Delete">
                                        <materialDesign:PackIcon Kind="Delete"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <!-- Details -->
                            <StackPanel Grid.Row="1"
                                       Visibility="{Binding SelectedProfile, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedProfile.Name}" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Owner:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedProfile.Owner}" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Created:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedProfile.CreatedAt, StringFormat='g'}" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Modified:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedProfile.ModifiedAt, StringFormat='g'}" Margin="0,0,0,5"/>
                                </Grid>
                            </StackPanel>

                            <!-- No Selection Message -->
                            <TextBlock Grid.Row="1"
                                      Text="Select a profile to view details"
                                      Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="0,40,0,40"
                                      Visibility="{Binding SelectedProfile, Converter={StaticResource InvertedNullToVisibilityConverter}}"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- General Settings Card -->
                    <materialDesign:Card Padding="15" Margin="0,0,0,10"
                                        Visibility="{Binding SelectedProfile.General, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="General Settings" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Mount Path:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedProfile.General.DefaultMountPath}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Scratch Path:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedProfile.General.DefaultScratchPath}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Log Path:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedProfile.General.DefaultLogPath}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Log Level:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedProfile.General.LogLevel}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Auto-create Dirs:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedProfile.General.AutoCreateDirectories}" Margin="0,0,0,5"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Image Operations Settings Card -->
                    <materialDesign:Card Padding="15" Margin="0,0,0,10"
                                        Visibility="{Binding SelectedProfile.ImageOperations, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="ImageAlbum" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Image Operations" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Default Index:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedProfile.ImageOperations.DefaultImageIndex}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Compression:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedProfile.ImageOperations.DefaultCompressionType}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Verify Integrity:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedProfile.ImageOperations.VerifyIntegrityBeforeOperation}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Auto-optimize:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedProfile.ImageOperations.AutoOptimizeAfterModification}" Margin="0,0,0,5"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Deployment Settings Card -->
                    <materialDesign:Card Padding="15"
                                        Visibility="{Binding SelectedProfile.Deployment, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="Rocket" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Deployment Settings" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Default Method:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedProfile.Deployment.DefaultDeploymentMethod}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Verify After:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedProfile.Deployment.VerifyAfterDeployment}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Auto-eject:" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedProfile.Deployment.AutoEjectAfterDeployment}" Margin="0,0,0,5"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
