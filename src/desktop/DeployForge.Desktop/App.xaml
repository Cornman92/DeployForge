<Application x:Class="DeployForge.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:DeployForge.Desktop.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Cyan" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

                <!-- Application Styles -->
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
            <converters:BoolToColorConverter x:Key="BoolToColor" />
            <converters:CountToVisibilityConverter x:Key="CountToVisibility" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibility" />
            <converters:InvertedNullToVisibilityConverter x:Key="InvertedNullToVisibility" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
