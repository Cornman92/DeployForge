{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.RateLimiting": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=deployforge.db"
  },
  "RateLimiting": {
    "Global": {
      "Enabled": true,
      "PermitLimit": 100,
      "WindowSeconds": 60,
      "QueueLimit": 10
    },
    "Endpoints": {
      "Health": {
        "PermitLimit": 60,
        "WindowSeconds": 60,
        "QueueLimit": 0
      },
      "Monitoring": {
        "PermitLimit": 120,
        "WindowSeconds": 60,
        "QueueLimit": 5
      },
      "Notifications": {
        "PermitLimit": 30,
        "WindowSeconds": 60,
        "QueueLimit": 2
      },
      "Reports": {
        "PermitLimit": 10,
        "WindowSeconds": 60,
        "QueueLimit": 1
      },
      "Schedules": {
        "PermitLimit": 20,
        "WindowSeconds": 60,
        "QueueLimit": 2
      },
      "ImageOperations": {
        "PermitLimit": 30,
        "WindowSeconds": 60,
        "QueueLimit": 3
      }
    },
    "IpRateLimiting": {
      "Enabled": true,
      "PermitLimit": 1000,
      "WindowSeconds": 60,
      "Whitelist": [
        "127.0.0.1",
        "::1",
        "localhost"
      ],
      "Blacklist": []
    }
  },
  "Monitoring": {
    "MetricsIntervalSeconds": 5,
    "AlertCooldownMinutes": 15,
    "MetricsRetentionDays": 30,
    "AlertRetentionDays": 90
  },
  "Notifications": {
    "EnableEmail": false,
    "EnableSlack": false,
    "EnableTeams": false,
    "EnableWebhook": false,
    "Email": {
      "SmtpHost": "",
      "SmtpPort": 587,
      "UseSsl": true,
      "Username": "",
      "Password": "",
      "FromEmail": "",
      "FromName": "DeployForge",
      "DefaultRecipients": []
    },
    "Slack": {
      "WebhookUrl": "",
      "DefaultChannel": "#deployforge",
      "BotUsername": "DeployForge Bot",
      "IconEmoji": ":robot_face:"
    },
    "Teams": {
      "WebhookUrl": "",
      "ThemeColor": "0076D7"
    },
    "Webhook": {
      "Url": "",
      "Method": "POST",
      "AuthHeader": ""
    }
  },
  "Reports": {
    "OutputDirectory": "C:\\ProgramData\\DeployForge\\Reports",
    "RetentionDays": 60,
    "DefaultFormat": "PDF",
    "IncludeCharts": true,
    "IncludeSummary": true,
    "IncludeDetailedLogs": false
  },
  "Schedules": {
    "MaxConcurrentJobs": 5,
    "RetentionDays": 180,
    "DefaultTimeZone": "UTC",
    "EnableScheduledJobs": true
  }
}
