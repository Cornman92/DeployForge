<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Card Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Navigation Button Style -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <!-- Section Header Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,16,0,8" />
    </Style>

    <!-- Feature Toggle Style -->
    <Style x:Key="FeatureToggleStyle" TargetType="ToggleSwitch">
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="OnContent" Value="" />
        <Setter Property="OffContent" Value="" />
    </Style>

    <!-- Progress Ring Style -->
    <Style x:Key="LargeProgressRingStyle" TargetType="ProgressRing">
        <Setter Property="Width" Value="48" />
        <Setter Property="Height" Value="48" />
    </Style>

    <!-- Status Badge Styles -->
    <Style x:Key="SuccessBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SuccessBrush}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="WarningBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource WarningBrush}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="ErrorBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ErrorBrush}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
    </Style>
</ResourceDictionary>
