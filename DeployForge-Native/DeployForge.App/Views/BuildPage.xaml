<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DeployForge.App.Views.BuildPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DeployForge.App.Views">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24" Padding="0,0,24,24">
                
                <!-- Source Image -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Source Image" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Text="{x:Bind ViewModel.SourceImagePath, Mode=TwoWay}"
                                     PlaceholderText="Select a Windows image file..."
                                     IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="Browse" Margin="8,0,0,0"
                                    Command="{x:Bind ViewModel.BrowseSourceCommand}"/>
                        </Grid>
                        
                        <ComboBox Header="Image Index" SelectedIndex="{x:Bind ViewModel.SelectedIndex, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
                
                <!-- Debloat Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <Grid>
                            <TextBlock Text="Debloat" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.EnableDebloat, Mode=TwoWay}" 
                                          HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <StackPanel Visibility="{x:Bind ViewModel.EnableDebloat, Mode=OneWay}">
                            <ComboBox Header="Debloat Level" HorizontalAlignment="Stretch"
                                      SelectedIndex="{x:Bind ViewModel.DebloatLevel, Mode=TwoWay}">
                                <ComboBoxItem Content="Light - Remove minimal bloatware"/>
                                <ComboBoxItem Content="Moderate - Recommended balance"/>
                                <ComboBoxItem Content="Aggressive - Remove most apps"/>
                                <ComboBoxItem Content="Extreme - Bare minimum"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Privacy Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <Grid>
                            <TextBlock Text="Privacy" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.EnablePrivacy, Mode=TwoWay}" 
                                          HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <StackPanel Visibility="{x:Bind ViewModel.EnablePrivacy, Mode=OneWay}" Spacing="8">
                            <CheckBox Content="Disable Telemetry" IsChecked="{x:Bind ViewModel.DisableTelemetry, Mode=TwoWay}"/>
                            <CheckBox Content="Disable Cortana" IsChecked="{x:Bind ViewModel.DisableCortana, Mode=TwoWay}"/>
                            <CheckBox Content="Block Telemetry Domains" IsChecked="{x:Bind ViewModel.BlockTelemetryDomains, Mode=TwoWay}"/>
                            
                            <ComboBox Header="Privacy Level" HorizontalAlignment="Stretch"
                                      SelectedIndex="{x:Bind ViewModel.PrivacyLevel, Mode=TwoWay}">
                                <ComboBoxItem Content="Minimal - Basic privacy"/>
                                <ComboBoxItem Content="Balanced - Recommended"/>
                                <ComboBoxItem Content="Aggressive - Enhanced privacy"/>
                                <ComboBoxItem Content="Paranoid - Maximum privacy"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Gaming Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <Grid>
                            <TextBlock Text="Gaming Optimization" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.EnableGaming, Mode=TwoWay}" 
                                          HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <StackPanel Visibility="{x:Bind ViewModel.EnableGaming, Mode=OneWay}" Spacing="8">
                            <CheckBox Content="Install Gaming Runtimes (DirectX, VC++)" 
                                      IsChecked="{x:Bind ViewModel.InstallGamingRuntimes, Mode=TwoWay}"/>
                            <CheckBox Content="Optimize Network Settings" 
                                      IsChecked="{x:Bind ViewModel.OptimizeNetwork, Mode=TwoWay}"/>
                            
                            <ComboBox Header="Gaming Profile" HorizontalAlignment="Stretch"
                                      SelectedIndex="{x:Bind ViewModel.GamingProfile, Mode=TwoWay}">
                                <ComboBoxItem Content="Minimal - Basic optimizations"/>
                                <ComboBoxItem Content="Balanced - Recommended"/>
                                <ComboBoxItem Content="Performance - Higher FPS"/>
                                <ComboBoxItem Content="Extreme - Maximum performance"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Developer Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <Grid>
                            <TextBlock Text="Developer Environment" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.EnableDeveloper, Mode=TwoWay}" 
                                          HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <StackPanel Visibility="{x:Bind ViewModel.EnableDeveloper, Mode=OneWay}" Spacing="8">
                            <CheckBox Content="Enable Developer Mode" IsChecked="True" IsEnabled="False"/>
                            <CheckBox Content="Install WSL2" IsChecked="{x:Bind ViewModel.InstallWsl2, Mode=TwoWay}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Performance Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Performance" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        
                        <CheckBox Content="Optimize Services" 
                                  IsChecked="{x:Bind ViewModel.OptimizeServices, Mode=TwoWay}"/>
                        <CheckBox Content="Disable Animations" 
                                  IsChecked="{x:Bind ViewModel.DisableAnimations, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>
                
                <!-- Unattend Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <Grid>
                            <TextBlock Text="Answer File (Unattend.xml)" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <ToggleSwitch IsOn="{x:Bind ViewModel.GenerateUnattend, Mode=TwoWay}" 
                                          HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <StackPanel Visibility="{x:Bind ViewModel.GenerateUnattend, Mode=OneWay}" Spacing="8">
                            <TextBox Header="Computer Name" Text="{x:Bind ViewModel.ComputerName, Mode=TwoWay}"/>
                            <TextBox Header="Username" Text="{x:Bind ViewModel.Username, Mode=TwoWay}"/>
                            <PasswordBox Header="Password" Password="{x:Bind ViewModel.Password, Mode=TwoWay}"/>
                            <CheckBox Content="Skip OOBE" IsChecked="{x:Bind ViewModel.SkipOobe, Mode=TwoWay}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Output Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Output" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Text="{x:Bind ViewModel.OutputPath, Mode=TwoWay}"
                                     PlaceholderText="Output file path..."/>
                            <Button Grid.Column="1" Content="Browse" Margin="8,0,0,0"
                                    Command="{x:Bind ViewModel.BrowseOutputCommand}"/>
                        </Grid>
                        
                        <ComboBox Header="Output Format" HorizontalAlignment="Stretch"
                                  SelectedIndex="{x:Bind ViewModel.OutputFormat, Mode=TwoWay}">
                            <ComboBoxItem Content="WIM"/>
                            <ComboBoxItem Content="ESD"/>
                            <ComboBoxItem Content="ISO"/>
                            <ComboBoxItem Content="VHD"/>
                            <ComboBoxItem Content="VHDX"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Build Panel -->
        <Border Grid.Column="1" Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderThickness="1,0,0,0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
            <Grid Padding="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Build Progress" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <!-- Progress Area -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Spacing="16"
                            Visibility="{x:Bind ViewModel.IsBuilding, Mode=OneWay}">
                    <ProgressRing IsActive="True" Width="64" Height="64"/>
                    <TextBlock Text="{x:Bind ViewModel.BuildProgress.CurrentStep, Mode=OneWay}"
                               HorizontalAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <ProgressBar Value="{x:Bind ViewModel.BuildProgress.PercentComplete, Mode=OneWay}"
                                 Maximum="100"/>
                    <TextBlock Text="{x:Bind ViewModel.BuildProgress.StatusMessage, Mode=OneWay}"
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
                
                <!-- Logs -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                              Visibility="{x:Bind ViewModel.IsBuilding, Mode=OneWay}">
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.BuildLogs}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBlock Text="{x:Bind}" Style="{StaticResource CaptionTextBlockStyle}"
                                           FontFamily="Consolas"/>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
                
                <!-- Build Button -->
                <StackPanel Grid.Row="2" Spacing="8">
                    <Button Content="Start Build" Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.StartBuildCommand}"
                            IsEnabled="{x:Bind ViewModel.IsBuilding, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>
                    <Button Content="Cancel" HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.CancelBuildCommand}"
                            Visibility="{x:Bind ViewModel.IsBuilding, Mode=OneWay}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
