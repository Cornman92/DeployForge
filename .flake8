[flake8]
# Flake8 Configuration for DeployForge
# Compatible with Black formatter

max-line-length = 100
extend-ignore =
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # E501: line too long (handled by Black)
    E501,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E402: module level import not at top of file
    E402,
    # F401: module imported but unused (handled by IDE)
    # F403: 'from module import *' used (sometimes needed)

exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    env,
    ENV,
    .tox,
    .pytest_cache,
    .mypy_cache,
    docs/_build,
    migrations,
    tests/fixtures,

per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401,F403
    # Test files can have long lines and unused imports
    tests/*:E501,F401,F841
    # Examples can be more relaxed
    examples/*:E501

max-complexity = 15
docstring-convention = google

# Plugins
# flake8-bugbear
# flake8-docstrings
# flake8-import-order
