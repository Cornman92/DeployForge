{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "DeployForge": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=deployforge.db",
    "RedisConnection": "localhost:6379"
  },
  "DeployForge": {
    "Version": "1.0.0-alpha",
    "WorkingDirectory": "C:\\DeployForge\\Work",
    "MountDirectory": "C:\\DeployForge\\Mount",
    "TempDirectory": "C:\\DeployForge\\Temp",
    "LogDirectory": "C:\\DeployForge\\Logs",
    "MaxConcurrentSessions": 5,
    "EnableAutoCleanup": true,
    "CleanupIntervalMinutes": 60
  },
  "DISM": {
    "TimeoutSeconds": 3600,
    "LogLevel": "Warnings",
    "ScratchDirectory": "C:\\DeployForge\\Scratch"
  },
  "Security": {
    "RequireAdministrator": true,
    "EnableAuditLogging": true,
    "MaxLoginAttempts": 5
  },
  "Performance": {
    "EnableCaching": true,
    "CacheDurationMinutes": 30,
    "MaxMemoryUsageMB": 2048
  },
  "Features": {
    "EnableAIAssistant": false,
    "EnableCloudSync": false,
    "EnablePlugins": true,
    "EnableTelemetry": false
  }
}
